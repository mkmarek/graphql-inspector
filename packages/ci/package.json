{
  "name": "@graphql-inspector/ci",
  "version": "3.4.0",
  "description": "Tooling for GraphQL. Compare GraphQL Schemas, check documents, find breaking changes, find similar types.",
  "repository": {
    "type": "git",
    "url": "kamilkisiela/graphql-inspector",
    "directory": "packages/ci"
  },
  "author": {
    "name": "Kamil Kisiela",
    "email": "kamil.kisiela@gmail.com",
    "url": "https://github.com/kamilkisiela"
  },
  "license": "MIT",
  "bin": {
    "graphql-inspector": "dist/index.js"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./*": {
      "require": "./dist/*.js",
      "import": "./dist/*.mjs"
    }
  },
  "typings": "dist/index.d.ts",
  "keywords": [
    "graphql",
    "graphql-inspector",
    "tools",
    "cli",
    "ci"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist/",
    "prebuild": "pnpm clean",
    "prepack": "bob prepack",
    "prepublishOnly": "pnpm build",
    "test": "jest"
  },
  "peerDependencies": {
    "graphql": "^14.0.0 || ^15.0.0 || ^16.0.0"
  },
  "dependencies": {
    "@graphql-inspector/commands": "3.4.0",
    "@graphql-inspector/config": "3.4.0",
    "@graphql-inspector/loaders": "3.4.0",
    "@graphql-inspector/logger": "3.4.0",
    "tslib": "^2.0.0",
    "yargs": "17.2.1"
  },
  "publishConfig": {
    "directory": "dist",
    "access": "public"
  },
  "sideEffects": false,
  "buildOptions": {
    "bin": {
      "graphql-inspector": {
        "input": "src/index.ts"
      }
    }
  },
  "typescript": {
    "definition": "dist/index.d.ts"
  }
}
